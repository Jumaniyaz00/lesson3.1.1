<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result_fielt"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="Result"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Clin"
            android:onClick="onNumberClik"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:onClick="onNumberClik"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="+"
            android:onClick="onInstruktorClik"
        android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fore"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/fife"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/mines"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="-"
            android:onClick="onInstruktorClik"
        android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/tree"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="*"
            android:onClick="onInstruktorClik"
        android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="."
            android:onClick="onInstruktorClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/theroo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:onClick="onNumberClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/delenie"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:onClick="onInstruktorClik"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/ravno"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="="
            android:onClick="onInstruktorClik"
        android:textSize="30sp"/>
    </LinearLayout>



</LinearLayout>